{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./App/",
    "paths": {
      "@Atoms": ["./Components/atoms/"],
      "@Atoms/*": ["./Components/atoms/*"],

      "@Molecules/*": ["./Components/molecules/*"],
      "@Molecules": ["./Components/molecules/"],

      "@HOCs": ["./Components/HOCs/"],
      "@HOCs/*": ["./Components/HOCs/*"],

      "@Theme": ["./Theme/"],
      "@Theme/*": ["./Theme/*"],

      "@Metrics": ["./Theme/Metrics.ts"],

      "@Screens/*": ["./Screens/*"],
      "@Screens": ["./Screens/"],

      "@Skia": ["./Components/Skia/"],
      "@Skia/*": ["./Components/Skia/*"],

      "@Khayat/*": ["./Libs/@Khayat/src/*"],

      "@Utils/*": ["./Utils/*"],
      "@Context/*": ["./Context/*"],

      "@Hooks": ["./Hooks/"],
      "@Hooks/*": ["./Hooks/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
