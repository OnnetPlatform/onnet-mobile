{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["./App/Components/*"],
      "@Atoms": ["./App/Components/atoms/index.ts"],
      "@Molecules": ["./App/Components/molecules/index.ts"],
      "@HOCs": ["./App/Components/HOCs/index.ts"],
      "@Theme": ["./App/Theme/index.ts"],
      "@Metrics": ["./App/Theme/Metrics.ts"],
      "@Screens": ["./App/Screens/index.ts"],
      "@Skia/*": ["./App/Components/Skia/*"],
      "@Khayat/*": ["./App/Libs/@Khayat/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
