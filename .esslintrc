{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "sort-imports": "warn",
    "import/first": "error",
    "import/newline-after-import": "error",
    "react-hooks/exhaustive-deps": "off"
  }
}
